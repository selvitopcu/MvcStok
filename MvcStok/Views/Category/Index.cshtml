@using MvcStok.Models.Entity
@model List<TblKategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td><a href="/Category/KategoriSil/@x.ID" class="btn btn-danger">SİL</a>
            </td>
            <td><a href="/Category/KategoriGetir/@x.ID"class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
<a href="/Category/YeniKategori/" class="btn btn-primary">YENİ KATEGORİ</a>